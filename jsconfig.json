{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "#root/*": ["./*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"],
  "typeAcquisition": {
    "exclude": [
      "agent-base",
      "https-proxy-agent",
      "mdast-util-from-markdown/**",
      "stable",
      "source-map",
      "defer-to-connect",
      "ismobilejs"
    ]
  }
}
