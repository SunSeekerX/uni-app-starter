{
  "compilerOptions": {
    "target": "ESNEXT",
    "resolveJsonModule": true,
    "module": "ESNext",
    "outDir": "./bin",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "types": ["node", "@dcloudio/types", "miniprogram-api-typings", "mini-types"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["test"],
  "typeAcquisition": {
    "exclude": ["@dcloudio/types"]
  }
}
